pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/annmercin/jenkins_project.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        sh 'docker build -t omegaberaka/hello-jenkins:latest .'
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        sh 'kubectl apply -f k8s/'
      }
    }
  }
}

