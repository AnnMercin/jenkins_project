pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "ğŸ“¥ Fetching source code"
                git branch: 'main',
                    url: 'https://github.com/annmercin/jenkins_project.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "ğŸ›  Building Docker image (no deploy)"
                sh '''
                    eval $(minikube docker-env)
                    docker build -t hello-jenkins:build-test .
                '''
            }
        }
    }

    post {
        success {
            echo "âœ… Build task completed successfully"
        }
        failure {
            echo "âŒ Build failed â€“ check logs"
        }
    }
}

